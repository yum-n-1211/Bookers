<h1>Editing Book</h1>

<% if @book.errors.any? %>
  <div id="error_explanation">
    <%= @book.errors.count %>errors prohibited this book from being saved:
    <ul>
      <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with model: @book, url: update_book_path(@book.id), method: :patch, local:true do |f| %>

  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Body</h4>
  <%= f.text_area :body %>

  <br><%= f.submit 'Update Book' %>

<% end %>


<%= link_to "Show",book_path(@book.id) %>|
<%= link_to "Back",'/books' %>